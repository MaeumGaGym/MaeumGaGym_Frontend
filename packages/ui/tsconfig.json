{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "composite": true,
    "jsx": "preserve"
  },
  "include": ["index.tsx", "**/*.ts", "**/*.tsx", "@types", "assets/**/*.png"],
  "exclude": ["node_modules", "dist"]
}
